        <div class="container">
            <div class="item">Carrots</div>
            <div class="item">Broccoli</div>
            <div class="item">Spinach</div>
        </div>
    </section>
    
    <section id="desserts" class="section desserts">
        <h2>Delicious Desserts</h2>
        <div class="container">
            <div class="item">Chocolate Cake</div>
            <div class="item">Ice Cream</div>
